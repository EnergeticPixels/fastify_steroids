{
  "type": "object",
  "$id": "schema:dotenv",
  "required": ["FASTIFY_PORT", "DB_HOST", "DB_USER", "DB_PWORD", "DB_NAME", "JWT_SECRET"],
  "properties": {
    "NODE_ENV": {
      "type": "string",
      "default": "development"
    },
    "FASTIFY_PORT": {
      "type": "integer",
      "default": 3000
    },
    "DB_HOST": {
      "type": "string"
    },
    "DB_PORT": {
      "type": "integer",
      "default": 27017
    },
    "DB_USER": {
      "type": "string",
      "default": "root"
    },
    "DB_PWORD": {
      "type": "string",
      "default": ""
    },
    "DB_NAME": {
      "type": "string",
      "default": "mydb"
    },
    "JWT_SECRET": {
      "type": "string"
    },
    "JWT_EXPIRE_IN": {
      "type": "string",
      "default": "1h"
    }
  }
}
